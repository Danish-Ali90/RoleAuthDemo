@model IEnumerable<RoleAuthDemo.Models.Payment>

@{
    ViewData["Title"] = "Payments";
}

<h2>Payments</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create Pending Payment</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Member</th>
            <th>Amount</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Created At (UTC)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@(p.Member != null ? $"{p.Member.FirstName} {p.Member.LastName}" : "—")</td>
                <td>@String.Format("{0:C}", p.Amount)</td>
                <td>@p.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@p.Status</td>
                <td>@p.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @* Optional: Add edit/delete/details links later *@
                </td>
            </tr>
        }
    </tbody>
</table>