@model RoleAuthDemo.Models.Member
@{
    ViewData["Title"] = "Delete Member";
}

<div class="container mt-4">
    <h2 class="text-danger fw-semibold mb-3">
        <i class="bi bi-trash me-2"></i> Delete Member
    </h2>

    <div class="card shadow-sm p-4">
        <h5>Are you sure you want to delete this member?</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-3">CNIC</dt>
            <dd class="col-sm-9">@Model.CNIC</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@Model.City</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
