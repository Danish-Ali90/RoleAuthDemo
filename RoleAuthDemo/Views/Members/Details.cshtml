@model RoleAuthDemo.Models.Member
@{
    ViewData["Title"] = "Member Details";
}

<div class="container mt-4">
    <h2 class="text-info fw-semibold mb-3">
        <i class="bi bi-person-vcard me-2"></i> Member Details
    </h2>

    <div class="card shadow-sm p-4">
        <div class="row align-items-center">
            <!-- 🔹 Profile Picture -->
            <div class="col-md-3 text-center mb-3">
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <img src="@Model.ProfileImagePath"
                         alt="Profile Picture"
                         class="rounded-circle border shadow-sm"
                         style="width:150px; height:150px; object-fit:cover;" />
                }
                else
                {
                    <img src="~/images/default-profile.png"
                         alt="Default Profile"
                         class="rounded-circle border shadow-sm"
                         style="width:150px; height:150px; object-fit:cover;" />
                }
            </div>

            <!-- 🔹 Member Info -->
            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-4">First Name</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Last Name</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">CNIC</dt>
                    <dd class="col-sm-8">@Model.CNIC</dd>

                    <dt class="col-sm-4">Phone Number</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.Address</dd>

                    <dt class="col-sm-4">City</dt>
                    <dd class="col-sm-8">@Model.City</dd>
                </dl>
            </div>
        </div>

        <div class="mt-3 text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>
