@model RoleAuthDemo.Models.Plot
@{
    ViewData["Title"] = "Add New Plot";
}

<div class="container mt-4">
    <h2 class="text-success fw-semibold mb-3">
        <i class="bi bi-plus-circle me-2"></i> Add New Plot
    </h2>

    <form asp-action="Create" method="post" class="card p-4 shadow-sm">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PlotNumber" class="form-label"></label>
                <input asp-for="PlotNumber" class="form-control" />
                <span asp-validation-for="PlotNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="SizePerSqFeet" class="form-label"></label>
                <input asp-for="SizePerSqFeet" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="SizePerSqFeet" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label d-block"></label>
            <div class="form-check form-switch">
                <input asp-for="Status" class="form-check-input" type="checkbox" />
                <label class="form-check-label">Active</label>
            </div>
        </div>

        <div class="d-flex justify-content-start mt-3">
            <button type="submit" class="btn btn-sm btn-success fw-semibold me-2 px-4">
                <i class="bi bi-save me-1"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-sm btn-secondary fw-semibold px-4">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
