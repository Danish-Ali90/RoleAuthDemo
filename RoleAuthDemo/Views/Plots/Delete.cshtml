@model RoleAuthDemo.Models.Plot
@{
    ViewData["Title"] = "Delete Plot";
}

<div class="container mt-4">
    <h2 class="text-danger fw-semibold mb-3">
        <i class="bi bi-trash me-2"></i> Delete Plot
    </h2>

    <div class="card shadow-sm p-4">
        <h5>Are you sure you want to delete this plot?</h5>

        <dl class="row mt-3">
            <dt class="col-sm-3">Plot Number</dt>
            <dd class="col-sm-9">@Model.PlotNumber</dd>

            <dt class="col-sm-3">Size (sq. ft.)</dt>
            <dd class="col-sm-9">@Model.SizePerSqFeet</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.Status)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger fw-semibold me-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
