@model IEnumerable<RoleAuthDemo.Models.Plot>
@{
    ViewData["Title"] = "Manage Plots";
}

<!-- ✅ Include DataTables & Bootstrap styles -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" />

<div class="container mt-4">
    <h2 class="text-primary fw-semibold mb-3">
        <i class="bi bi-diagram-3 me-2"></i> Manage Plots
    </h2>

    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between mb-3">
            <a asp-action="Create" class="btn btn-sm btn-success fw-semibold">
                <i class="bi bi-plus-circle me-1"></i> Add New Plot
            </a>
        </div>

        <table id="plotsTable" class="table table-striped table-bordered align-middle nowrap" style="width:100%">
            <thead class="table-primary">
                <tr>
                    <th>Plot Number</th>
                    <th>Size (sq. ft.)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plot in Model)
                {
                    <tr>
                        <td>@plot.PlotNumber</td>
                        <td>@plot.SizePerSqFeet</td>
                        <td>
                            @if (plot.Status)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Booked</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@plot.Id" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@plot.Id" class="btn btn-sm btn-info me-1 text-white">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@plot.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- ✅ jQuery + DataTables scripts -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#plotsTable').DataTable({
                responsive: true,
                searching: true,          // 🔍 search bar enabled
                paging: true,             // 📄 pagination
                ordering: true,           // ↕ sortable columns
                info: true,               // ℹ️ show info text
                pageLength: 5,
                lengthMenu: [5, 10, 25, 50],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search plots..."
                }
            });
        });
    </script>
}
