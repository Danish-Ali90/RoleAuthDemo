@model RoleAuthDemo.Models.Plot
@{
    ViewData["Title"] = "Edit Plot";
}

<div class="container mt-4">
    <h2 class="text-warning fw-semibold mb-3">
        <i class="bi bi-pencil-square me-2"></i> Edit Plot
    </h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm border-0">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PlotNumber" class="form-label fw-semibold"></label>
                <input asp-for="PlotNumber" class="form-control form-control-sm" />
                <span asp-validation-for="PlotNumber" class="text-danger small"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="SizePerSqFeet" class="form-label fw-semibold"></label>
                <input asp-for="SizePerSqFeet" class="form-control form-control-sm" type="number" step="0.01" />
                <span asp-validation-for="SizePerSqFeet" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label fw-semibold d-block"></label>
            <div class="form-check form-switch">
                <input asp-for="Status" class="form-check-input" type="checkbox" />
                <label class="form-check-label ms-1">Active</label>
            </div>
        </div>

        <div class="d-flex justify-content-start mt-2">
            <!-- ✅ Smaller Save Button -->
            <button type="submit" class="btn btn-warning btn-sm fw-semibold me-2 px-3 py-1">
                <i class="bi bi-save me-1"></i> Save
            </button>

            <!-- ✅ Smaller Back Button -->
            <a asp-action="Index" class="btn btn-secondary btn-sm fw-semibold px-3 py-1">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
