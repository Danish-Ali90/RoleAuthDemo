@model IEnumerable<RoleAuthDemo.Models.Booking>
@{
    ViewData["Title"] = "Manage Bookings";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" />

<div class="container mt-4">
    <h2 class="text-primary fw-semibold mb-3">
        <i class="bi bi-calendar-check me-2"></i> Manage Bookings
    </h2>

    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between mb-3">
            <a asp-action="Create" class="btn btn-sm btn-success fw-semibold">
                <i class="bi bi-plus-circle me-1"></i> New Booking
            </a>
        </div>

        <table id="bookingsTable" class="table table-striped table-bordered align-middle nowrap" style="width:100%">
            <thead class="table-primary">
                <tr>
                    <th>Member</th>
                    <th>Plot</th>
                    <th>Size (sq. ft.)</th>
                    <th>Status</th>
                    <th>Booking Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.Member.FirstName @booking.Member.LastName</td>
                        <td>@booking.Plot.PlotNumber</td>
                        <td>@booking.Plot.SizePerSqFeet</td>
                        <td>
                            @if (booking.Plot.Status)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Booked</span>
                            }
                        </td>
                        <td>@booking.BookingDate.ToShortDateString()</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#bookingsTable').DataTable({
                responsive: true,
                searching: true,          // 🔍 Search bar enabled
                paging: true,             // 📄 Pagination enabled
                ordering: true,           // ↕ Sortable columns
                info: true,               // ℹ️ "Showing 1 to X of Y entries"
                pageLength: 5,
                lengthMenu: [5, 10, 25, 50],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search bookings..."
                }
            });
        });
    </script>
}
