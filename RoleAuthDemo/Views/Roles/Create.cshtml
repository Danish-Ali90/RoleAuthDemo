@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Create New Role</h2>

    <form asp-action="Create" method="post" class="shadow-sm p-4 rounded bg-white">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Role Name</label>
            <input type="text" name="roleName" class="form-control" placeholder="Enter role name" required />
        </div>

        <button type="submit" class="btn btn-success">Create Role</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
